<main class="main">
  {{> heading title="Інформаці про товар"}}

  {{#with data.product}}
  <form method="POST" action="/purchase-create?id={{id}}">
    <div class="product-info">

      <img src="{{img}}" alt="{{title}}" class="product-info_image">
      <h2 class="product-info_title">{{title}}</h2>
      <p class="product-info_subtitle">{{description}}</p>

      {{> divider}}

      {{#each category}}
      <span class="product-info_category product-info_category--{{id}}">{{text}}</span>
      {{/each}}

      {{> divider}}

      {{>field label="Кількість" type="number" name="amount" value="1"}}

      {{>button text="Купити зараз" price=price}}
    </div>
  </form>
  {{/with}}

  {{> heading title="Інші товари" info="Комп'ютери та ноутбуки" }}

  <div class="product-list">
    {{#each data.list}}
    {{> purchase-product data=this}}
    {{/each}}
  </div>
</main>