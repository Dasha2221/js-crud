{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}


<main>
  <h2>Редагування товару</h2>
  <div class="card">
    <section>
      {{#with data}}
      <div class="form">
        <h1 class="form__title">Інформація про товар</h1>
        <form method="POST" action="/product-edit">
          <div class="form__content">
            <div class="form__product">
              <div class="form__field">
                <label for="name" class="form__label">Назва товару</label>
                <input type="name" name="name" class="form__input">
              </div>
              <div class="form__field">
                <label for="price" class="form__label">Ціна</label>
                <input type="price" name="price" class="form__input">
              </div>
              <div class="form__field">
                <label for="id" class="form__label">ID</label>
                <input type="id" name="id" class="form__input">
              </div>
            </div>

          </div>
          <div class="form__field">
            <label for="description" class="form__label">Короткий опис товару</label>
            <input type="description" name="description" class="form__input">
          </div>
          <div class="button">
            <button class="form__button">Зберегти оновлення</button>
            <button class="button__red"><a href="/product-edit?id={{id}}">Видалити товар</a></button>
          </div>
      </div>
      </form>
  </div>
  {{/with}}
  </section>
  </div>

</main>


